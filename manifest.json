{
  "manifest_version": 3,
  "name": "Block Sites",
  "version": "0.0.2",
  "icons": { 
    "16": "assets/icon.png",
    "32": "assets/icon.png",
    "64": "assets/icon.png",
    "128": "assets/icon.png" 
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://www.youtube.com/*",
        "https://flatout.com.br/*",
        "https://mail.google.com/*",
        "https://www.instagram.com/*",
        "https://www.reddit.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "tabs"
  ]
}
